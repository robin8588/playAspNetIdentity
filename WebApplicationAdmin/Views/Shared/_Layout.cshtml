<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    <link href='@SiteUrl.Content("~/telerik.kendoui.professional.2016.3.1028/styles/kendo.common.min.css")' rel="stylesheet" />
    <link href='@SiteUrl.Content("~/telerik.kendoui.professional.2016.3.1028/styles/kendo.bootstrap.min.css")' rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("我的 ASP.NET 应用程序", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav visible-xs">
                @Html.Partial("_Nav")
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="hidden-xs">
        <ul class="nav nav-pills nav-stacked">
            @Html.Partial("_Nav")
        </ul>
    </div>

    <div class="container body-content">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <br />
    <footer class="text-left text-muted rights">
        <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src='@SiteUrl.Content("~/telerik.kendoui.professional.2016.3.1028/js/kendo.all.min.js")'></script>
    <script src='@SiteUrl.Content("~/telerik.kendoui.professional.2016.3.1028/js/cultures/kendo.culture.zh-CN.min.js")'></script>
    <script src='@SiteUrl.Content("~/telerik.kendoui.professional.2016.3.1028/js/messages/kendo.messages.zh-CN.min.js")'></script>
    @Scripts.Render("~/bundles/jsonform")
    <script>
        @{
            var url = HttpContext.Current.Request.Path;
        }
        $('.nav a[href="@url"]').parent().addClass("active");
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
